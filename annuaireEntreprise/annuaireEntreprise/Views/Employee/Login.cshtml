
<div class="container">
    <h1 class="text-center">Connexion administrateur</h1>
    <form id="form" class="container" asp-controller="Employee" asp-action="SendLogin" method="post" onsubmit="return checkHoneypot()">
        @Html.AntiForgeryToken()
        <fieldset>
            <div id="formulaire" class="text-center d-flex flex-column m-auto">

                <div class="form-group d-inline-flex">
                    <label for="email" class="mr-4 w-25">Adresse e-mail</label>
                    <input type="text" class="form-control w-25" name="mail" placeholder="mail">
                </div>

                <div class="form-group d-inline-flex">
                    <label for="password" class="mr-4 w-25">Mot de passe</label>
                    <input type="password" class="form-control w-25" name="password" placeholder="password">
                </div>

                <div id="inputHidden" class="form-group d-inline-flex">
                    <input type="hidden" class="form-control w-25" id="honeypot">
                </div>
            </div>
            @if (@ViewData["message"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["message"]
                </div>
            }
            <div id="Button" class="text-center"><button type="submit" class="btn btn-outline-secondary ml-4 mr-4">Connexion</button></div>

        </fieldset>
    </form>
    <script>
        function checkHoneypot() {
            if(document.getElementById('honeypot').value) {
                // The honeypot field was filled in, likely by a bot
                return false; // cancel form submission
            }
            return true; // proceed with form submission
        }
    </script>
</div>
